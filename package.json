{
  "name": "nodeless-cose-js",
  "version": "0.1.0",
  "description": "Runtime-agnostic JavaScript COSE implementation",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf coverage/ .nyc_output/",
    "pretest": "semistandard --fix",
    "test": "pwd & ava ./test/*.js --match '!*test-helpers*'",
    "test:babel": "npx babel-node node_modules/.bin/ava test/sign1-tests.js",
    "coverage": "nyc npm test",
    "coveragehtml": "nyc report -r html",
    "precoveragehtml": "npm run coverage",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "live": "live-server -q --port=4003 --ignorePattern='(js|css|png)$' coverage",
    "watch": "watch 'npm run coveragehtml' test lib",
    "dev": "npm-run-all -p --silent watch live"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikekelly/nodeless-cose-js.git"
  },
  "keywords": [
    "COSE",
    "Signing",
    "CBOR",
    "Cryptography",
    "Runtime-agnostic",
    "React-Native",
    "Web",
    "ES256",
    "ES384",
    "ES512"
  ],
  "author": "Samuel Erdtman",
  "contributors": [
    {
      "name": "Mike Kelly",
      "email": "mikekelly321@gmail.com"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mikekelly/nodeless-cose-js/issues"
  },
  "homepage": "https://github.com/mikekelly/nodeless-cose-js#readme",
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "cbor-x": "^1.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/register": "^7.28.3",
    "@babel/runtime": "^7.28.4",
    "@react-native/babel-preset": "^0.82.1",
    "ava": "^3.15.0",
    "base64url": "^3.0.1",
    "bn.js": "^4.11.8",
    "elliptic": "^6.5.4",
    "jsonfile": "^2.4.0",
    "jwk-to-pem": "^2.0.5",
    "live-server": "*",
    "metro-react-native-babel-preset": "^0.77.0",
    "npm-run-all": "*",
    "nyc": "^15.1.0",
    "semistandard": "^16.0.1",
    "watch": "*"
  },
  "engines": {
    "node": ">=12.0"
  },
  "semistandard": {
    "ignore": "tmp/**"
  }
}
